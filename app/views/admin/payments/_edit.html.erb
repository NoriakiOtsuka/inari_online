<div class="modal-dialog">
  <div class="modal-content">

    <%= form_for(@payment, url: {controller: "admin/payments", action: "update"}, remote: true) do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= @payment.online.first_name %> <%= @payment.online.last_name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span area-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="form-group field">
          <%= f.label :course, "受講クラス" %><br />
          <%= f.select :course, Payment.courses.keys, class: "course" %>
        </div>
        <div class="form-group field">
          <%= f.check_box(:paid, {:checked => @payment.paid}) %>
          <%= f.label :paid, "振込確認済み" %>
        </div>
        <div class="modal-footer actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

  </div>
</div>