<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="row">
      <!-- 通知内容 -->
      <div class="col-md-8 order-md-2">
        <div class="card margin-vertical-20">
          <div class="card-header text-center">
            <h4><%= @notification.title %></h4>
          </div>
          <div class="card-body mx-3">
            <div class="text-end">
              <small><%= @notification.created_at.strftime("%Y年%m月%d日 %H:%M") %></small>
            </div>
            <div class="mt-3">
              <%= safe_join(@notification.body.split("\n"), tag(:br)) %>
            </div>
          </div>
          <div class="card-footer bg-transparent">
            <%= link_to "戻る", 'javascript:history.back()', class: "btn btn-link" %>
          </div>
        </div>
      </div>

      <!-- 送信先 -->
      <div class="col-md-4 order-md-1">
        <div class="card margin-vertical-20">
          <div class="card-header text-center">
            <h4>送信先</h4>
          </div>
          <div class="card-body">
            <ul class="list-group">
              <% @notification_histories.each do |history| %>
                <li class="list-group-item border border-0 border-bottom">
                  <%= history.online.first_name %><%= history.online.last_name %>
                  <% if !history.checked %>
                    <span class="position-absolute top-50 start-0 translate-middle mx-2 p-1 bg-warning rounded-circle">
                      <span class="visually-hidden">未読</span>
                    </span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
