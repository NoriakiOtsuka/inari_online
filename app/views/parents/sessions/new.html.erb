<div class="row">
  <div class="col-lg-4 offset-lg-4 col-sm-6 offset-sm-3">
    <div class="card margin-vertical-20">
      <div class="card-header text-center">
        <h4>保護者様ログイン</h4>
      </div>
      <div class="card-body">
        <%= form_for :session, url: parent_session_path do |f| %>
          <div class="mb-3">
            <%= f.label :membership_number, "受講生番号", class: "form-label" %><br />
            <%= f.text_field :membership_number, autofocus: true, autocomplete: "membership_number", class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :parent_email, "E-mail（保護者様）", class: "form-label" %><br />
            <%= f.email_field :parent_email, autocomplete: "parent_email", class: "form-control" %>
          </div>

          <div class="actions d-grid gap-2 col-8 mx-auto">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
            <%= link_to "受講生ログインページ", 'javascript:history.back()', class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
