<!DOCTYPE html>
<html>
  <head>
    <title>InariOnline</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <!-- 管理者ログイン -->
          <% if admin_signed_in? %>
            <li><%= link_to ' Home', admins_top_path %></li>
            <li><%= link_to ' About', homes_about_path %></li>
            <li><%= link_to ' Student', admin_onlines_path %></li>
            <li><%= link_to ' Log Out', destroy_admin_session_path, method: :delete %></li>

          <!-- 受講生ログイン -->
          <% elsif online_signed_in? %>
            <li><%= link_to ' Home', onlines_top_path %></li>
            <li><%= link_to ' About', homes_about_path %></li>
            <li><%= link_to ' My page', online_path(current_online) %></li>
            <li><%= link_to ' Achievement', studies_path %></li>
            <li><%= link_to ' Log Out', destroy_online_session_path, method: :delete %></li>

          <!-- 保護者ログイン -->
          <% elsif parent_signed_in? %>
            <li><%= link_to ' About', homes_about_path %></li>
            <li><%= link_to ' Log Out', destroy_parent_session_path, method: :delete %></li>

          <!-- ログアウト -->
          <% else %>
            <li><%= link_to ' Home', root_path %></li>
            <li><%= link_to ' About', homes_about_path %></li>
            <li><%= link_to ' Log In', new_online_session_path %></li>
            <li><%= link_to ' Admin', new_admin_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  
  <body>
    <%= yield %>
  </body>
</html>
