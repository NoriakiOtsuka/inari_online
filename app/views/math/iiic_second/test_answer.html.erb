<div class="row">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
    <div class="card margin-vertical-20">
      <div class="card-header text-center">
        <h4>テスト解答</h4>
      </div>
      <div class="card-body">
        <% for id in @id do %>
          <figure>
            <img src='/assets/math_iiics_test_answer_<%= id %>.png' alt="" width='100%'>
          </figure>
        <% end %>
      </div>
      <div class="card-footer bg-transparent">
        <div class="text-center">
          <%= link_to "一覧画面に戻る", math_iiic_second_index_path, class: "btn btn-link" %>
          <!-- 単元テストの条件分岐 -->
          <% if @parameter != 7 && @parameter != 13 && @parameter != 20 %>
            <%= link_to "演習問題へ進む", math_iiic_second_exercise_path, class: "btn btn-link" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
