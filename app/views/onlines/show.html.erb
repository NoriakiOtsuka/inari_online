<div class="container">
	<div class="row">
		<h3>登録情報確認画面</h3>
	</div>
	<div class="row">
		<h4>登録情報</h4>
		<table>
			<tr>
				<td>受講生番号</td>
				<td><%= @online.membership_number %></td>
			</tr>
			<tr>
				<td>会員ステータス</td>
				<td><%= @online.status %></td>
			</tr>
			<tr>
				<td>名前(姓)</td>
				<td><%= @online.first_name %></td>
			</tr>
			<tr>
				<td>名前(名)</td>
				<td><%= @online.last_name %></td>
			</tr>
			<tr>
				<td>名前(カナ)</td>
				<td><%= @online.kana_name %></td>
			</tr>
			<tr>
				<td>名前(保護者)</td>
				<td><%= @online.parent_name %></td>
			</tr>
			<tr>
				<td>性別</td>
				<td><%= @online.gender %></td>
			</tr>
			<tr>
				<td>生年月日</td>
				<td><%= @online.birthday %></td>
			</tr>
			<tr>
				<% if @online.high_school != "" %>
					<td>高校</td>
					<td><%= @online.high_school %></td>
				<% end %>
			</tr>
			<tr>
				<% if @online.junior_high_school != "" %>
					<td>中学校</td>
					<td><%= @online.junior_high_school %></td>
				<% end %>
			</tr>
			<tr>
				<% if @online.elementary_school != "" %>
					<td>小学校</td>
					<td><%= @online.elementary_school %></td>
				<% end %>
			</tr>
			<tr>
				<td>学年</td>
				<td><%= @online.grade %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= @online.postal_code %></td>
			</tr>
			<tr>
				<td>都道府県</td>
				<td><%= @online.prefecture %></td>
			</tr>
			<tr>
				<td>市区町村以下の住所</td>
				<td><%= @online.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= @online.phone %></td>
			</tr>
			<tr>
				<td>E-mail</td>
				<td><%= @online.email %></td>
			</tr>
			<tr>
				<td>E-mail(保護者)</td>
				<td><%= @online.parent_email %></td>
			</tr>
			<tr>
				<td>受講科目</td>
				<% if current_online.status == "有効" %>
					<td><%= @online.course %></td>
				<% end %>
			</tr>
		</table>
	</div>
	<div>
		<%= link_to "Edit", edit_online_path, class: "btn btn-primary btn-lg center-block" %>
	</div>
</div>
